import java.util.Scanner;
class Ptn{
	public static void main(String args[]){
	int r;
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter number of rows: ");
	r=sc.nextInt();
	for(int i =0;i<=r;i++){
		for(int h=1;h<=i;h++){
			System.out.print("*");
		}
		System.out.println(" ");
	}
}
}
